    <task>
      <name>userSynchronization</name>
      <bean>org.lsc.beans.SimpleBean</bean>
      <ldapSourceService>
        <name>openldap-user</name>
        <connection reference="openldap"/>
        <baseDn>LSC_LDAP_BASE_DN</baseDn>
        <pivotAttributes>
          <string>mail</string>
